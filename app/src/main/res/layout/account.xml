<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="35dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/account_pp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_avatar"
            android:contentDescription="@string/app_name" />
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="1dp"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardview"
        android:text="Change Profile Picture"
        android:textAlignment="center"/>

    <View
        android:layout_width="1dp"
        android:layout_height="15dp"/>

    <EditText
        android:id="@+id/account_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:id="@+id/account_lastname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:id="@+id/account_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:background="@drawable/edit_text_style"/>

    <EditText
        android:id="@+id/account_phone_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:drawableRight="@drawable/ic_baseline_edit_24"
        android:background="@drawable/edit_text_style"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/account_dateofbirth"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_style"
            android:layout_marginRight="19dp"/>

        <Spinner
            android:id="@+id/account_gender"
            android:layout_width="140dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_text_style"
            />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/account_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Regular User"

            android:layout_marginRight="19dp"/>
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Organizer"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/account_save_button"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Save Changes"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/button_style"/>

</LinearLayout>